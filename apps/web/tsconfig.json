{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"],
      "@/tasks/*": ["./src/app/dashboard/tasks/*"],
      "@/calendar/*": ["./src/app/dashboard/calendar/*"],
      "@/projects/*": ["./src/app/dashboard/projects/*"],
      "@/inbox/*": ["./src/app/dashboard/inbox/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/lib/.gitkeep"
  ],
  "exclude": ["node_modules"]
}
