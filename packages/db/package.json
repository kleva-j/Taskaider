{
  "name": "@taskaider/db",
  "version": "0.0.0",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "generate": "drizzle-kit generate:sqlite",
    "push": "drizzle-kit push:sqlite",
    "sqlite:generate": "drizzle-kit generate:sqlite - out ./drizzle/migrations - breakpoints - schema=./drizzle/schema.ts",
    "migrate": "ts-node --esm src/migrate.ts",
    "sqlite:migrate": "tsx ./src/migrate.ts",
    "studio": "drizzle-kit studio --port 4000 --verbose",
    "with-env": "dotenv -e .env --",
    "dev": "pnpm with-env drizzle-kit studio --port 5556",
    "seed": "bun src/seed.ts"
  },
  "dependencies": {
    "@libsql/client": "^0.3.4",
    "@paralleldrive/cuid2": "^2.2.2",
    "@t3-oss/env-core": "^0.6.1",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.13",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.2",
    "bufferutil": "^4.0.7",
    "encoding": "^0.1.13",
    "eslint-config-custom": "workspace:*",
    "tsconfig": "workspace:*",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2",
    "utf-8-validate": "^6.0.3"
  }
}
